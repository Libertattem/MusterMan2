<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.RouteSettingsFragment">


    <TextView
            android:text="Мрашрут: "
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/spinner"
            app:layout_constraintEnd_toStartOf="@+id/spinner"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            android:entries="@array/locations_for_petrol"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Текущее положение:"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/spinner2"
            app:layout_constraintEnd_toStartOf="@+id/spinner2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" android:layout_marginTop="8dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:entries="@array/locations_for_price"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Топливная ставка по маршруту, р.:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView15"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"/>
    <TextView
            android:text="350"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            android:gravity="start"
            android:textColor="#000000"
            android:textSize="16sp"/>
    <TextView
            android:text="Стоимость поверки, р:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView18"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView18"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"/>
    <TextView
            android:text="600"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner2"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView17"
            android:gravity="start"
            android:textColor="#000000"
            android:textSize="16sp"/>
    <TextView
            android:text="Скидка, р.:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView20"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"/>
    <TextView
            android:text="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView19"
            android:gravity="start"
            android:textColor="#000000"
            android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>